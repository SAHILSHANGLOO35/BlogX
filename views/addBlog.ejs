<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Add New Blog</title>
    <style>
        /* Form container styling */
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        /* Styling the labels */
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        /* Input styling */
        .form-control {
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 10px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: none;
        }

        /* Button styling */
        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Image preview styling */
        #coverImagePreview {
            display: block;
            max-width: 100%;
            height: auto;
            margin-top: 10px;
            border-radius: 8px;
        }

        /* Container for form elements */
        .form-group {
            margin-bottom: 20px;
        }

        /* Typography */
        h2 {
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
            color: #007bff;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .form-container {
                padding: 20px;
            }
        }
    </style>
</head>

<body style="background-color: #212121; padding-top: 56px;">
    <%- include("./partials/nav") %>

    <div class="container mt-5">
        <div class="form-container">
            <h2>Add New Blog</h2>
            <form action="/blog" method="post" enctype="multipart/form-data">
                <!-- Cover Image Upload -->
                <div class="form-group">
                    <label for="coverImage" class="form-label">Cover Image</label>
                    <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage" />
                    <img id="coverImagePreview" alt="Cover Image Preview" style="display: none;" />
                </div>

                <!-- Blog Title -->
                <div class="form-group">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" aria-describedby="title" />
                </div>

                <!-- Blog Content -->
                <div class="form-group">
                    <label for="body" class="form-label">Body</label>
                    <textarea name="body" class="form-control" placeholder="Add your content" id="body" rows="6"></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button class="btn btn-primary btn-lg">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>


    <%- include("./partials/scripts") %>
</body>
</html>