<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Homepage</title>
    <style>
        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover; 
            object-position: center;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #333;
            overflow: hidden;
            text-overflow: ellipsis;
            display: block;
            max-height: 3.2em;
            line-height: 1.6em;
        }


        .card-body {
            text-align: center;
            padding-top: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 8px 16px;
            font-size: 0.9rem;
            transition: background-color 0.2s ease-in-out;
            border-radius: 20px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .container-fluid {
            padding-left: 30px;
            padding-right: 30px;
        }
    </style>
</head>

<body style="background-color: #212121; padding-top: 56px;">
    <%- include("./partials/nav") %>

    <div class="container-fluid mt-4">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <% blogs.forEach(blog => { %>
                <div class="col d-flex justify-content-center">
                    <div class="card h-100">
                        <!-- Image with object-fit: cover to ensure proper fitting -->
                        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Blog Cover Image">
                        <div class="card-body d-flex flex-column">
                            <!-- Title with ellipsis for long text -->
                            <h5 class="card-title"><%= blog.title %></h5>
                            <!-- 'View' button centered -->
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include("./partials/scripts") %>
</body>
</html>